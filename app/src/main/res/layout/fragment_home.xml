<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blackbg3"
    tools:context=".Bottomfragments.homeFragment"
    android:id="@+id/home_fragment_id">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center_horizontal"
        android:text=""
        android:fontFamily="serif"

        android:layout_marginTop="60dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <androidx.cardview.widget.CardView
            android:id="@+id/cvnotes"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:contentDescription="card view for notes">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/card1" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvwallet"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:contentDescription="card view for wallet/finance">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/card2"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>






</FrameLayout>